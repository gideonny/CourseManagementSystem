@model CourseManagementSystem.Entities.Course

@{
    ViewData["Title"] = "Add course";
}
<h1>Add a new course</h1>
<form asp-controller="CourseManagementSystem" asp-action="AddNewCourse" method="post" enctype="application/x-www-form-urlencoded">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Instructor">Instructor</label>
        <input type="text" asp-for="Instructor" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input type="date" asp-for="StartDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RoomNumber">Room number</label>
        <input type="text" asp-for="RoomNumber" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-controller="CourseManagementSystem" asp-action="GetAllCourses" class="btn btn-primary">Cancel</a>
</form>
